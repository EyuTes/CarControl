@model Itancan.Core.ViewModels.AccountFormViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.UserName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>

    @Html.HiddenFor(m => m.UserName);
    <button type="submit" class="btn btn-primary">Login</button>
}
